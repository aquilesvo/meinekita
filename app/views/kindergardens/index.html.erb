<h1> Great kindergardens </h1>

<% @kindergardens.each do |kindergarden| %>
  <%= link_to kindergarden_path(kindergarden), :action => 'go' do %>
    <div>
      <% if kindergarden.carrier_id %><p><%= Carrier.find(kindergarden.carrier_id + 1).name %></p><% end %>
      <h3><%= kindergarden.name %></h3>
      <h5><%= kindergarden.address %> <%= kindergarden.plz %> <%= kindergarden.district %> </h5>
    </div>
  <% end %>
<% end %>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
