
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3 ">
      <div class="profile-box">
        <h1>My profile</h1>

        <% if @current_user.photo.present? %>
          <div>
            <%= cl_image_tag @current_user.photo, height: 150, width: 200, crop: :fill %> <br>
             <%= link_to 'Delete', user_photo_path(current_user), method: :patch %>
          </div>
        <% else %>
        <%= cl_image_tag("person-placeholder.png", width: 150) %>
          <%= simple_form_for(@current_user) do |f| %>
            <!-- [...] -->
            <%= f.input :photo, label: false %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.button :submit, value: 'Foto hochladen' %>
            <!-- [...] -->
          <% end %>
        <% end %>
        <h4>Email:</h4>
        <p><%= current_user.email %></p>
      </div>
    </div>
  </div>
</div>
