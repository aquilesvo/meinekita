<h3> Great kindergardens in Berlin </h3>

<div class="kindergarden-index-main-container">
  <div class="kindergarden-index-cards-container">
    <div class="kindergarden-index-row">
      <% @kindergardens.each do |kindergarden| %>
        <%= link_to kindergarden_path(kindergarden), :action => 'go' do %>
          <div class="col-md-12">
            <div class="kindergarden-index-card">
              <div>
                <h4><%= kindergarden.name %></h4>
                <h5><%= kindergarden.address %> <%= kindergarden.plz %> <%= kindergarden.district %> </h5>
                <% if kindergarden.carrier_id %><h5><%= Carrier.find(kindergarden.carrier_id + 1).name %></h5><% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>">
  </div>
</div>
